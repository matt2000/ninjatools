[user]
	name = Your Name
	email = you@NinjitsuWeb.com
[core]
	editor = vim
        whitespace=fix,-indent-with-non-tab,-indent-with-tab,trailing-space,cr-at-eol
[push]
	default = current
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  unstage = reset HEAD
  df = !git diff --no-prefix && git diff --staged --no-prefix
  clear = reset --hard
  up = reset --merge HEAD
  re = remote -v

[color]
  ui = auto

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

